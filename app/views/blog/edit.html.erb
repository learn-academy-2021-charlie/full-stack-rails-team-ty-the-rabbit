<h2>Update an Blog</h2>

<%= form_with model: @blog, method: :patch,  local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br>
  <br>
  <%= form.label :content %>
  <%= form.text_field :content%>
  <br>
  <br>
  <%= form.submit 'Edit Blog'%>
<% end %>
<br>
<br>
<h4><%= link_to 'Back Home', blogs_path %></h4>